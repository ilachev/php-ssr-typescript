{% extends 'base.html.twig' %}

{% block title %}Категории{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Главная</a></li>
        <li class="breadcrumb-item"><a href="{{ path('market') }}">Витрина</a></li>
        <li class="breadcrumb-item active">Категории</li>
    </ol>
{% endblock %}

{% block body %}

    {{ include('app/market/categories/_tabs.html.twig') }}

    <div class="controls">
        <a href="{{ path('market.categories.create') }}" class="btn btn-success">Добавить категорию</a>
    </div>

    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-2">{{ form_widget(form.name) }}</div>
                <div class="col-md-2">{{ form_widget(form.status) }}</div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Фильтр</button>
                    <a href="{{ path('market.categories') }}" class="btn btn-outline-secondary">Сбросить</a>
                </div>
            </div>
            {{ form_end(form) }}

        </div>
    </div>

    <div class="box">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Название', 'name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Сортировка', 'sort') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Статус', 'status') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Дата создания', 'date') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination %}
                <tr>
                    <td><a href="{{ path('market.categories.category.show', {'id': category.id}) }}">{{ category.name }}</a></td>
                    <td>{{ category.sort }}</td>
                    <td>{{ category_status(category.status) }}</td>
                    <td>{{ category.date | date('d.m.Y H:i') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}