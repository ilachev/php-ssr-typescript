{% if status == 'wait' %}
    <span class="badge badge-secondary" style="font-size: 100%">Wait</span>
{% elseif status == 'active' %}
    <span class="badge badge-primary" style="font-size: 100%">Active</span>
{% elseif status == 'blocked' %}
    <span class="badge badge-danger" style="font-size: 100%">Block</span>
{% endif %}